super + Escape
    pkill -USR1 -x sxhkd

# Reload sxhkdrc
super + ctrl + r
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

super + Return
   tilix

super + shift + Return
    pcmanfm

#Rofi & dmenu

super + shift + d 
   dmenu run

super + d
    rofi -show drun

super + c
  clipmenu

super + e 
    rofi -show emoji -modi emoji

alt + p
    rofi -show

