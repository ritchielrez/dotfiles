super + Escape
    pkill -USR1 -x sxhkd

# Reload sxhkdrc
super + ctrl + r
    pkill -usr1 -x sxhkd; notify-send 'sxhkd' 'Reloaded config'

super + Return
    alacritty

super + shift + Return
    pcmanfm

#Rofi & dmenu

super + d
    rofi -font "JetBrainsMono NF 12" -show-icons -show drun -dpi 1.25

super + c
  clipmenu

super + e 
    rofi -font "JetBrainsMono NF 12" -show emoji -modi emoji -dpi 1.25

alt + p
    rofi -show

# Application Keybindings

super + w
   brave

super + a
   dmconf

super + s
   dmsearch

ctrl + shift + Escape
    alacritty -e htop

alt + s
    todoist

alt + z
    zim

alt + m
    alacritty 'neomutt' -e neomutt

alt + n
    ferdi

alt + d 
    bitwarden

ctrl + alt + s
    xfce4-screenshooter

alt + l
  lotion

ctrl + alt + n
    termite 'ncmpcpp' -e ncmpcpp

#Audio Keybindings

XF86AudioRaiseVolume
        amixer -c 1 -- sset Master 2db+

XF86AudioLowerVolume
        amixer -c 1 -- sset Master 2db-

XF86AudioMute
        amixer -c 1 -- sset Master toggle

alt + d
        amixer -c 1 -- sset Master 2db+

alt + a
        amixer -c 1 -- sset Master 2db-

XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}

# quit/restart bspwm
super + shift + {q,r}
    bspc {quit,wm -r}

# close a window
super + q
    bspc node -c

# move workspace
super + {1,2,3,4,5,6,7,8,9}
    bspc desktop -f {1,2,3,4,5,6,7,8,9}

# move focused window to the next workspace and then switch to that workspace
super + shift + {Left,Right}
    id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# send to desktop
super + shift + {1-9,0}
    bspc node -d '^{1-9,10}' --follow

# Expand/contract a window by moving one of its side outward/inward
super + r : {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

# Clear the memory cache 
ctrl + 1
    clearcache.sh
