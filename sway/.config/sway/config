# Set my gtk themes
set $gnome-schema org.gnome.desktop.interface

seat seat0 xcursor_theme 'capitaine-cursors-light' 48
exec_always {
    gsettings set $gnome-schema gtk-theme 'TokyoNight'
    gsettings set $gnome-schema icon-theme 'dracula-icons'
    gsettings set $gnome-schema cursor-theme 'capitaine-cursors-light'
    gsettings set $gnome-schema cursor-size '48'
    gsettings set $gnome-schema font-name 'Ubuntu 12'
}

# Finally start waybar
    exec_always /home/ritux/.config/waybar/launch.sh &


# Launch discord
bindsym Mod1+d exec discord

# This enables tap to click and natural scrolling in sway
# It's the unique id that you need for your touchpad, which
# you need to paste in after the "input" keyword.
# run: "swaymsg -t get_inputs" to get the unique id for your touchpad.
input "1267:12375:ELAN1300:00_04F3:3057_Touchpad" {
    tap enabled
    natural_scroll enabled
}


























































