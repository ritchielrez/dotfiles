#!/usr/bin/env bash

# Workspaces
bspc monitor -d 1 2 3 4 5 6 7 8 9

# Window rules
bspc rule -a Xfce4-appfinder state=floating

# Window gap and padding
bspc config window_gap 10
bspc config top_padding 40
bspc config left_padding 10
bspc config right_padding 10

bspc config split_ratio 0.5
bspc config borderless_monocle true
bspc config gapless_monocle true

# Kill running processes
killall sxhkd
killall pnmixer
killall nm-applet
killall picom
killall dunst
# killall xfce4-panel
# killall polybar
killall alttab
killall ibus-daemon

# Window switcher
alttab &

# Key binding daemon
sxhkd &

# Wallpaper
nitrogen --restore &
# wpg -s /home/ritux/Documents/repos/wallpapers/maller/pyramid.jpg
# feh --bg-fill ~/Pictures/photo-1530890289114-8385d3901f84.jpg

# Compositor
picom &

# Authentication
lxsession &

# Notifications
dunst &

# Network Manger applet
nm-applet &

# Sound applet
pnmixer &

# Power manager for laptop battery power management
xfce4-power-manager &

# Xfce4-panel
# ~/.config/xfce4/launch &

# Polybar
~/.config/polybar/awesome.sh

# Emacs daemon server 
emacs --daemon &

# Start ibus
ibus-daemon &
